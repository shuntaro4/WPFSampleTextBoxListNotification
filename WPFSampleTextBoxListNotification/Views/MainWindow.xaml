<Window
    x:Class="WPFSampleTextBoxListNotification.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="525"
    Height="350"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Margin="5"
            Padding="5"
            Click="Button_Click"
            Content="素のWPF" />
        <Button
            Grid.Row="1"
            Margin="5"
            Padding="5"
            Click="Button_Click2"
            Content="Prism" />
        <Button
            Grid.Row="2"
            Margin="5"
            Padding="5"
            Click="Button_Click3"
            Content="Prism + ReactiveProperty" />
    </Grid>
</Window>
